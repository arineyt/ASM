<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="order_trust_wizard_form">
            <field name="name">order_trust_wizard_form</field>
            <field name="model">order.trust.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="partner_id" /> is blacklisted. Are you sure want to approve this Sale Order?

                    <footer>
                        <button name="approve_blacklisted_customer_order" type="object" string="Approve"
